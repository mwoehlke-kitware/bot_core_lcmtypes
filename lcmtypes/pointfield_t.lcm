package bot_core;

// Direct duplicate of ROS's
// sensor_msgs/PointField 
// added by mfallon.

struct pointfield_t
{
    string name;
    int32_t offset;
    int8_t datatype;
    int32_t count;

    // enum values sync with ROS fields
    const int8_t INT8 = 1;
    const int8_t UINT8 = 2;
    const int8_t INT16 = 3;
    const int8_t UINT16 = 4;
    const int8_t INT32 = 5;
    const int8_t UINT32 =6;
    const int8_t FLOAT32 = 7;
    const int8_t FLOAT64 = 8;
}
